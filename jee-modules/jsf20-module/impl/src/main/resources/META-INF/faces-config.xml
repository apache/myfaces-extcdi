<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <application>
        <action-listener>org.apache.myfaces.extensions.cdi.jsf.impl.security.SecurityViolationAwareActionListener</action-listener>
        <navigation-handler>org.apache.myfaces.extensions.cdi.jsf.impl.navigation.FlowNavigationHandler</navigation-handler>
        <navigation-handler>org.apache.myfaces.extensions.cdi.jsf2.impl.scope.conversation.AccessScopeAwareNavigationHandler</navigation-handler>

        <view-handler>org.apache.myfaces.extensions.cdi.jsf.impl.scope.conversation.WindowContextAwareViewHandler</view-handler>

        <system-event-listener>
            <system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
            <system-event-listener-class>org.apache.myfaces.extensions.cdi.jsf2.impl.listener.system.CodiStartupListener</system-event-listener-class>
        </system-event-listener>
    </application>

    <factory>
        <lifecycle-factory>org.apache.myfaces.extensions.cdi.jsf2.impl.listener.phase.CodiLifecycleFactoryWrapper</lifecycle-factory>
        <faces-context-factory>org.apache.myfaces.extensions.cdi.jsf2.impl.listener.request.CodiFacesContextFactory</faces-context-factory>
        <render-kit-factory>org.apache.myfaces.extensions.cdi.jsf2.impl.scope.conversation.CodiRenderKitFactory</render-kit-factory>
    </factory>
</faces-config>